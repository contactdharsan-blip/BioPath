# BioPath Configuration Example
# Copy this file to .env and adjust values as needed

# Application
APP_NAME=BioPath
APP_VERSION=1.0.0
DEBUG=false

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TIME_LIMIT=600

# Cache
CACHE_TTL=86400
DISK_CACHE_DIR=./cache

# API Rate Limits (requests per second)
PUBCHEM_RATE_LIMIT=5.0
CHEMBL_RATE_LIMIT=10.0
REACTOME_RATE_LIMIT=10.0

# API Endpoints (defaults are public APIs)
PUBCHEM_BASE_URL=https://pubchem.ncbi.nlm.nih.gov/rest/pug
CHEMBL_BASE_URL=https://www.ebi.ac.uk/chembl/api/data
REACTOME_BASE_URL=https://reactome.org/ContentService

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0

# Plugins
ENABLE_DOCKING_PLUGIN=false
DOCKING_PLUGIN_PATH=

# Scoring Weights
MEASURED_TARGET_WEIGHT=1.0
PREDICTED_TARGET_WEIGHT=0.3
POTENCY_WEIGHT=0.7
PATHWAY_COVERAGE_WEIGHT=0.3
